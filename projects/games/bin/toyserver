#!/bin/sh
#
# Command line launcher for the ToyBox server

if [ -z "$1" ]; then
    echo "Usage: $0 game_dir_name"
    exit -1
fi

GAMEID=$1
ROOT=`dirname $0`/..
GAMEDEF=$ROOT/$GAMEID/$GAMEID.xml
GAMEJAR=$ROOT/$GAMEID/dist/$GAMEID.jar
shift
if [ ! -f $GAMEDEF ]; then
    echo "Unable to locate $GAMEDEF."
    exit -1
fi
if [ ! -f $GAMEJAR ]; then
    echo "Unable to locate $GAMEJAR. Is the game built?"
    exit -1
fi

# Create our toybox properties file
echo "resource_dir = $ROOT/lib" > $ROOT/toybox.properties
echo "resource_url = file://$ROOT/lib" >> $ROOT/toybox.properties

# Make sure our jar file is symlinked
ln -sf ../$GAMEID/dist/$GAMEID.jar $ROOT/lib/$GAMEID.jar
ln -sf ../$GAMEID/dist/$GAMEID.jar $ROOT/client/gg-game.jar

CLASS=com.threerings.toybox.server.ToyBoxServer
$ROOT/bin/runjava -Dgame_conf=$GAMEDEF $CLASS

# clean up after ourselves
rm -f $ROOT/toybox.properties
rm $ROOT/lib/$GAMEID.jar
rm $ROOT/client/gg-game.jar
